<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRG1_MAUI_Sort.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Generera en lista med nummber. Ange hur många:" FontSize="18" />
            <Entry x:Name="NumbersEntry" />
            <Button Text="Generera lista och sortera" Clicked="SortNumbers" />
            <Label x:Name="UnsortedLabel" FontSize="18" TextColor="IndianRed" />
            <Label x:Name="SortedLabel" FontSize="18" TextColor="Green" />
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
    
    
